---
type Props = {
  title?: string;
};

const { title } = Astro.props;
---

<section class="ny-section">
  {title && <h2 class="ny-section__title">{title}</h2>}
  <div class="ny-section__content">
    <slot />
  </div>
</section>

<style>
  .ny-section {
    margin-top: 32px;
  }

  .ny-section__title {
    margin: 0 0 10px;
    font-size: 28px;
    font-weight: 800;
    color: var(--forest);
  }

  .ny-section__content {
    font-size: 15px;
    line-height: 1.7;
    color: var(--text-soft);
  }
</style>
