---
const { title, subtitle } = Astro.props;
---

<section class="py-12 md:py-16">
  <div class="mx-auto max-w-6xl px-6">
    {(title || subtitle) && (
      <header class="mb-8">
        {title && (
          <h1 class="text-3xl font-bold tracking-tight text-[#1F3D2B] md:text-4xl">
            {title}
          </h1>
        )}
        {subtitle && (
          <p class="mt-3 max-w-3xl text-lg leading-relaxed text-[#4A4A4A]">
            {subtitle}
          </p>
        )}
      </header>
    )}
    <slot />
  </div>
</section>
