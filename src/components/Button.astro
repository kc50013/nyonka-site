---
type Props = {
  href?: string;
  variant?: "solid" | "outline";
  type?: "button" | "submit";
};

const { href, variant = "solid", type = "button" } = Astro.props;
const base = "ny-btn";
const cls =
  variant === "outline" ? `${base} ${base}--outline` : `${base} ${base}--solid`;
---

{href ? (
  <a href={href} class={cls}>
    <slot />
  </a>
) : (
  <button type={type} class={cls}>
    <slot />
  </button>
)}

<style>
  .ny-btn {
    border-radius: 999px;
    padding: 9px 22px;
    font-size: 14px;
    font-weight: 600;
    border: 1px solid transparent;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    white-space: nowrap;
  }

  .ny-btn--solid {
    background: var(--accent);
    color: #fff;
    border-color: var(--accent);
  }

  .ny-btn--outline {
    background: rgba(255, 255, 255, 0.85);
    color: var(--accent);
    border-color: var(--accent-soft);
  }

  .ny-btn:hover {
    filter: brightness(1.03);
  }
</style>
