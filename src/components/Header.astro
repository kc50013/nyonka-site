---
// src/components/Header.astro (FULL REPLACEMENT)
import Button from "./Button.astro";

// Robust: works whether site.ts exports default or named
import * as SiteModule from "../utils/site";
const site = (SiteModule as any).default ?? (SiteModule as any).site;

const nav = site?.nav ?? [];
const partnerHref = site?.cta?.href ?? "/contact";
const partnerLabel = site?.cta?.label ?? "Partner With Us";
const brandName = site?.name ?? "NYONKA — Mining Cooperative";
const brandShort = site?.shortName ?? "NYONKA";

const pathname = Astro.url.pathname;
const isActive = (href: string) =>
  href === "/" ? pathname === "/" : pathname.startsWith(href);
---

<header class="ny-header" data-header>
  <div class="ny-header__inner">
    <a class="ny-brand" href="/" aria-label={brandName}>
      <span class="ny-brand__short">{brandShort}</span>
      <span class="ny-brand__dash">—</span>
      <span class="ny-brand__long">Mining Cooperative</span>
    </a>

    <nav class="ny-nav" aria-label="Primary navigation" data-desktop-nav>
      {nav.map((item) => (
        <a
          class={`ny-nav__link ${isActive(item.href) ? "is-active" : ""}`}
          href={item.href}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="ny-actions" data-actions>
      <button
        class="ny-menuBtn"
        type="button"
        aria-label="Open menu"
        aria-expanded="false"
        data-menu-btn
      >
        <span class="ny-menuBtn__icon" aria-hidden="true">☰</span>
        <span class="ny-menuBtn__text">Menu</span>
      </button>

      <Button href={partnerHref} variant="outline" class="ny-partnerBtn">
        {partnerLabel}
      </Button>
    </div>
  </div>

  <div class="ny-menuPanel" data-menu-panel hidden>
    <div class="ny-menuPanel__inner">
      <div class="ny-menuPanel__header">
        <div class="ny-menuPanel__title">{brandName}</div>
        <button class="ny-menuClose" type="button" aria-label="Close menu" data-menu-close>
          ✕
        </button>
      </div>

      <div class="ny-menuPanel__links">
        {nav.map((item) => (
          <a
            class={`ny-menuLink ${isActive(item.href) ? "is-active" : ""}`}
            href={item.href}
            data-menu-link
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<script is:inline>
  const header = document.querySelector("[data-header]");
  const desktopNav = document.querySelector("[data-desktop-nav]");
  const actions = document.querySelector("[data-actions]");
  const menuBtn = document.querySelector("[data-menu-btn]");
  const menuPanel = document.querySelector("[data-menu-panel]");
  const menuClose = document.querySelector("[data-menu-close]");
  const menuLinks = document.querySelectorAll("[data-menu-link]");

  const mqMobile = window.matchMedia("(max-width: 980px)");

  function applyHeaderMode() {
    const isMobile = mqMobile.matches;
    const scrolled = window.scrollY > 20;

    header?.classList.toggle("is-scrolled", scrolled);

    // MOBILE: always show Menu + Partner, never show inline nav links
    if (isMobile) {
      if (desktopNav) desktopNav.style.display = "none";
      if (actions) actions.style.display = "flex";
      return;
    }

    // DESKTOP: show links initially, swap to Menu + Partner after scroll
    if (desktopNav) desktopNav.style.display = scrolled ? "none" : "";
    if (actions) actions.style.display = scrolled ? "flex" : "none";
  }

  function openMenu() {
    if (!menuPanel || !menuBtn) return;
    menuPanel.hidden = false;
    menuBtn.setAttribute("aria-expanded", "true");
    document.body.style.overflow = "hidden";
  }

  function closeMenu() {
    if (!menuPanel || !menuBtn) return;
    menuPanel.hidden = true;
    menuBtn.setAttribute("aria-expanded", "false");
    document.body.style.overflow = "";
  }

  window.addEventListener("scroll", applyHeaderMode, { passive: true });
  window.addEventListener("load", applyHeaderMode);
  mqMobile.addEventListener?.("change", applyHeaderMode);

  menuBtn?.addEventListener("click", openMenu);
  menuClose?.addEventListener("click", closeMenu);
  menuLinks.forEach((a) => a.addEventListener("click", closeMenu));
  window.addEventListener("keydown", (e) => {
    if (e.key === "Escape") closeMenu();
  });
</script>

<style>
  .ny-header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: var(--paper, #f7f3ee);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .ny-header__inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 14px 28px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 26px;
  }

  .ny-brand {
    display: inline-flex;
    align-items: baseline;
    gap: 10px;
    text-decoration: none;
    color: var(--forest, #0f3d2e);
    white-space: nowrap;
  }
  .ny-brand__short {
    font-weight: 800;
    letter-spacing: 0.04em;
  }
  .ny-brand__dash {
    opacity: 0.55;
  }
  .ny-brand__long {
    opacity: 0.9;
    font-weight: 600;
  }

  .ny-nav {
    display: flex;
    align-items: center;
    gap: 22px;
    flex-wrap: nowrap;
    white-space: nowrap;
  }
  .ny-nav__link {
    text-decoration: none;
    color: var(--forest, #0f3d2e);
    font-weight: 700;
    padding: 6px 0;
    border-bottom: 2px solid transparent;
  }
  .ny-nav__link:hover {
    color: var(--copper, #b25a1b);
  }
  .ny-nav__link.is-active {
    border-bottom-color: var(--copper, #b25a1b);
  }

  /* Desktop default: hidden until scroll (JS toggles) */
  .ny-actions {
    display: none;
    align-items: center;
    gap: 12px;
  }

  .ny-menuBtn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    border-radius: 999px;
    padding: 10px 14px;
    border: 1px solid rgba(0, 0, 0, 0.2);
    background: #fff;
    cursor: pointer;
    font-weight: 800;
    color: var(--forest, #0f3d2e);
  }
  .ny-menuBtn:hover {
    border-color: var(--copper, #b25a1b);
  }
  .ny-menuBtn__icon {
    font-size: 16px;
    line-height: 1;
  }

  .ny-menuPanel {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    padding: 18px;
  }
  .ny-menuPanel__inner {
    max-width: 520px;
    margin: 0 auto;
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.22);
  }
  .ny-menuPanel__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 18px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }
  .ny-menuPanel__title {
    font-weight: 900;
    color: var(--forest, #0f3d2e);
  }
  .ny-menuClose {
    background: transparent;
    border: 0;
    font-size: 18px;
    cursor: pointer;
    padding: 6px 10px;
    color: var(--forest, #0f3d2e);
  }
  .ny-menuPanel__links {
    padding: 10px 0;
    display: grid;
  }
  .ny-menuLink {
    padding: 14px 18px;
    text-decoration: none;
    color: var(--forest, #0f3d2e);
    font-weight: 800;
  }
  .ny-menuLink:hover {
    background: rgba(178, 90, 27, 0.1);
    color: var(--copper, #b25a1b);
  }
  .ny-menuLink.is-active {
    color: var(--copper, #b25a1b);
  }

  /* MOBILE */
  @media (max-width: 980px) {
    .ny-header__inner {
      padding: 12px 16px;
      gap: 14px;
    }

    /* Brand: show only "NYONKA" (no hyphen, no long text) */
    .ny-brand__dash,
    .ny-brand__long {
      display: none;
    }

    /* No inline nav links on mobile */
    .ny-nav {
      display: none;
    }

    /* Always show actions on mobile (Menu + Partner) */
    .ny-actions {
      display: flex;
    }
  }
</style>
